        $('#checkedin-btn').css('background-color','rgb(37, 37, 37)')
        $('#checkedout-btn').css('background-color','rgb(37, 37, 37)')
        
    })
    $('#upcoming-btn').click(function(){
        $('#today').css('display','none')
        $('#checkedIn').css('display','none')
        $('#checkedOut').css('display','none')
        $('#upcoming').css('display','block')
        $('#today-btn').css('background-color','rgb(37, 37, 37)')
        $('#upcoming-btn').css('background-color','black')
        $('#checkedin-btn').css('background-color','rgb(37, 37, 37)')
        $('#checkedout-btn').css('background-color','rgb(37, 37, 37)')
    })
    $('#checkedin-btn').click(function(){
        $('#today').css('display','none')
        $('#checkedIn').css('display','block')
        $('#checkedOut').css('display','none')
        $('#upcoming').css('display','none')
        $('#today-btn').css('background-color','rgb(37, 37, 37)')
        $('#upcoming-btn').css('background-color','rgb(37, 37, 37)')
        $('#checkedin-btn').css('background-color','black')
        $('#checkedout-btn').css('background-color','rgb(37, 37, 37)')
    })
    $('#checkedout-btn').click(function(){
        $('#today').css('display','none')
        $('#checkedIn').css('display','none')
        $('#checkedOut').css('display','block')
        $('#upcoming').css('display','none')
        $('#today-btn').css('background-color','rgb(37, 37, 37)')
        $('#upcoming-btn').css('background-color','rgb(37, 37, 37)')
        $('#checkedin-btn').css('background-color','rgb(37, 37, 37) ')
        $('#checkedout-btn').css('background-color','black')
    })
</script>
