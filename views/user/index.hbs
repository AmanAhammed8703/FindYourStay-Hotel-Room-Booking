<script>

	$("#roomplus").click(function () {
		var val = parseInt($("#inproom").val())

		if (val < 4){
			val = val + 1
			}
		$("#inproom").val(val)
	})
	$("#roomminus").click(function () {
		var val = parseInt($("#inproom").val())
		var guest=parseInt($("#inpguest").val())
		if (val != 1) {
			val = val - 1
		}
		$("#inproom").val(val)
		if(guest>(val*4))
		$("#inpguest").val(val*4)
		
	})
	$("#guestplus").click(function () {
		var val = parseInt($("#inpguest").val())
		var room=parseInt($("#inproom").val())
		if (val < room*4){
			val = val + 1
			}
		$("#inpguest").val(val)
	})
	$("#guestminus").click(function () {
		var val = parseInt($("#inpguest").val())
		if (val != 1) {
			val = val - 1
		}
		$("#inpguest").val(val)
	})
</script>
