<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">

                    <h1 style="font-weight: 700;">Upcoming bookings <i class="fas fa-chevron-right"></i>
                        {{hotel.propertyName}}</h1><br><br>

                </div>
            </div>
        </div>
        <!-- row -->


        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="display" style="min-width: 845px;color: black;">
                                <thead>
                                    <tr>

                                        <th scope="col">User</th>
                                        <th scope="col">Mobile</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">From</th>
                                        <th scope="col">To</th>
                                        <th scope="col">Days</th>
                                        <th scope="col">Rooms</th>
                                        <th scope="col">Guests</th>
                                        <th scope="col">Total price</th>
                                        <th scope="col">Payment method</th>
                                        <th scope="col">Id proof</th>
                                        <th scope="col">Controlls</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each data}}
                                    {{#if this.userId}}
                                    <tr>
                                        <td>{{this.userName}}</td>
                                        <td>{{this.userMobile}}</td>
                                        
                                    {{else}}
                                     <tr>
                                        <td>{{this._id}}</td>
                                        <td>--</td>
                                    {{/if}}
                                        <td>{{this.categoty}}</td>
                                        <td>{{this.from}}</td>
                                        <td>{{this.to}}</td>
                                        <td>{{this.days}}</td>
                                        <td>{{this.room}}</td>
                                        <td>{{this.guest}}</td>
                                        <td>{{this.amount}}</td>
                                        <td>{{this.payment}}</td>
                                        
                                        <td>
                                            {{#if this.userId}}
                                            <button type="button" data-id="{{this._id}}" id="show"
                                                class="show btn btn-primary" data-bs-toggle="modal"
                                                data-bs-target="#exampleModal2">
                                                Show
                                            </button>
                                            <div class="modal fade" id="exampleModal2" tabindex="-1"
                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">ID Proof
                                                            </h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                        
                                                            <img src="" id="image" alt="image" style="width: 500px;">
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Close</button>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {{/if}}
                                            </td>



                                        <td><button type="button" data-id="{{this._id}}" data-amt="{{this.amount}}"data-user="{{this.userId}}" class="cancel btn btn-danger" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        Cancel
                      </button>

                      <!-- Modal -->
                      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              
                              Are you sure?Do you want to Cancel this Booking?
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <a href="" id="cancel" type="button" class="btn btn-danger">Cancel</a>
                            </div>
                          </div>
                        </div>
                      </div>


                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

</div>

<!--**********************************
            Content body end
        ***********************************-->
