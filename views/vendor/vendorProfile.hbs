<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4 style="font-size: 40px;">VENDOR PROFILE </h4>

                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Table</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Datatable</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->


        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        {{#if pword}}
                        <p style="color: red;">Wrong current password</p>
                        {{/if}}
                    </div>
                    <div class="card-body">
                        <form class="mt-3" action="/vendor/editProfile"method="post" enctype="multipart/form-data"
                            id="addroom">
                            <div class="container" style="color: black;">
                                <div class="row">
                                    
                                    <div class="col-12 col-lg-6">
                                        <label class="form-label mt-2">Property Name:</label>
                                        <input type="text" class="form-control" name="propertyName" value="{{profile.propertyName}}" readonly>
                                    </div>
                                    <div class="col-12 col-lg-6">
                                        <label class="form-label mt-2">Email:</label>
                                        <input type="text" class="form-control" name="Email" value="{{profile.Email}}" readonly>
                                    </div>


                                </div>

                                <div class="row">

                                    <div class="col-12 col-lg-6">
                                        <label class="form-label mt-2">Mobile Number:</label>
                                        <input type="text" class="form-control" name="mobileNumber" value="{{profile.mobileNumber}}" readonly>
                                    </div>
                                    <div class="col-12 col-lg-6">
                                        <label class="form-label mt-2">Location:</label>
                                        <input type="text" class="form-control" name="Location" value="{{profile.Location}}" readonly>
                                    </div>


                                </div>
                                <div class="row">
                                    <div class="col-12 col-lg-6">
                                        
                                        <div class="card-header" style="padding: 0%;">
                                            <div class="card-body"style="padding: 0%;">
                                                <label class="form-label mt-2">Address:</label>
                                                <div class="basic-form" style="padding-left: 0%;">
                                                    
                                                        <div class="form-group">
                                                            <textarea class="form-control" rows="4" name="Address"
                                                                id="Description" readonly>{{profile.Address}}</textarea>
                                                        </div>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-6">
                                        
                                        <div class="card-header" style="padding: 0%;">
                                            <div class="card-body"style="padding: 0%;">
                                                 {{#if profile.Description}}
                                                <label class="form-label mt-2">Description:</label>
                                                <div class="basic-form" style="padding-left: 0%;">
                                                    
                                                        <div class="form-group">
                                                           
                                                            <textarea class="form-control" rows="4" name="Description"
                                                                id="Description" readonly>{{profile.Description}}</textarea>
                                                            
                                                            {{/if}}
                                                        </div>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a href="/vendor/changePassword" style="color: rgb(77, 77, 248);">Change Password?</a>
                               <div>
                                    <button class="btn btn-outline-success btn-lg px-5 mt-4" type="submit"
                                        id="confirm-btn">Edit
                                        Room</button>
                                </div>


                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
<!--**********************************
            Content body end
        ***********************************-->


