<script>
	$('#room').keyup(function () { 
    this.value = this.value.replace(/[^0-9\.]/g,'');
});
	$('#guest').keyup(function () { 
    this.value = this.value.replace(/[^0-9\.]/g,'');
});
    $('#guest,#room').on('change',function(){
        var room=document.getElementById("room").value
        var guest=document.getElementById('guest').value
        if(guest>(room*4)){
            document.getElementById('guest').value=(room*4)
        }
    })
</script>
<script>
  $(document).on("click", ".booknow", function (e) {

    var varid = $(e.target).data('id');
    
    $('.modal-footer #book').attr('href', "/vendor/bookNow?id="+varid)
  })
</script>
