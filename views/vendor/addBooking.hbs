<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">

                    <h1 style="font-weight: 700;">Add booking <i class="fas fa-chevron-right"></i> </h1><br><br>


                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Table</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Datatable</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Select dates</h3>
                    </div>
                    <div class="card-body">
                        <form action="/vendor/addBooking" method="post" style="col-sm-12">
                        <div class="container">
                            <div class="row">
                                {{#if search}}
                                
                                <label for="" style="margin-top: 10px;color: black;">From:</label>
                                <input style="margin: 10px;border-color: black;" class="form-control col-sm-2" name="fromDate"type="date" id="fromDate" value="{{search.fromDate}}"required>
                                <label for="" style="margin-top: 10px;color: black;">To:</label>
                                <input style="margin: 10px;border-color: black;"class="form-control col-sm-2"name="toDate" type="date" id="toDate" min=""value="{{search.toDate}}" required>
                                <label for="" style="margin-top: 10px;color: black;">Rooms:</label>
                                <input style="margin: 10px;border-color: black;"class="number form-control col-sm-2"name="room" type="number" id="room" min="1"onkeydown="return false"value="{{search.room}}"  required >
                                <label for="" style="margin-top: 10px;color: black;">Guests:</label>
                                <input style="margin: 10px;border-color: black;"class="number form-control col-sm-2"name="guest" type="number" id="guest" min="1"onkeydown="return false"value="{{search.guest}}"  required >
                                {{else}}
                                
                                <label for="" style="margin-top: 10px;color: black;">From:</label>
                                <input style="margin: 10px;border-color: black;" class="form-control col-sm-2" name="fromDate"type="date" id="fromDate"required>
                                <label for="" style="margin-top: 10px;color: black;">To:</label>
                                <input style="margin: 10px;border-color: black;"class="form-control col-sm-2"name="toDate" type="date" id="toDate" min="" required>
                                <label for="" style="margin-top: 10px;color: black;">Rooms:</label>
                                <input style="margin: 10px;border-color: black;"class="number form-control col-sm-2"name="room" type="number" id="room" min="1"onkeydown="return false"  required >
                                <label for="" style="margin-top: 10px;color: black;">Guests:</label>
                                <input style="margin: 10px;border-color: black;"class="number form-control col-sm-2"name="guest" type="number" id="guest" min="1"onkeydown="return false"  required >
                               
                                
                           
                               
                                {{/if}}
                                <button class="btn btn-success"style="margin: 10px;">Submit</button>
                               
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">

                    </div>
                    <div class="card-body">
                        <div class="container">
                        <div class="table-responsive">
                            <table id="example" class="display" style="min-width: 845px;color: black;">
                                <thead>
                                    <tr>
                                        <th scope="col">Category</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Currently  Available</th>
                                        <th scope="col"> Price</th>
                                        <th scope="col"> Price for extra bed</th>
                                        <th scope="col"> Total Price</th>
                                        <th scope="col"> Controlls</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each rooms}}
                                    <tr>

                                        <td >{{this.category}}</td>
                                        <td>{{this.quantity}}</td>
                                        <td>{{this.remaining}}</td>
                                        <td>{{this.price}}</td>
                                        <td>{{this.bed}}</td>
                                        <td>{{this.totalAmount}}</td>
                                        <td><button type="button" data-id="{{this._id}}" id="booknow"
                                                class="booknow btn btn-success" data-bs-toggle="modal"
                                                data-bs-target="#exampleModal2">
                                                Book Now
                                            </button>
                                            <div class="modal fade" id="exampleModal2" tabindex="-1"
                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Check Out
                                                            </h5>

                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Close</button>
                                                            <a href="" class="book btn btn-Success" id="book"
                                                                >Book Now</a>
                                                          
                                                        </div>
                                                    </div>
                                                </div>
                                            </div></td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
