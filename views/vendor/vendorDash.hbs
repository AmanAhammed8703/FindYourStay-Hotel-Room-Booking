<script>
    var resp = {}
    $(document).ready(function () {
        $.ajax({
            url: '/vendor/getChartData',
            method: 'get',
            success: (response) => {
                resp = response
                respAmount=response.amount
                chart(resp)
                pieChart(resp)
                revenueChart(respAmount)
            }
        })

    })
    console.log(resp)
    function chart(details) {
        const labels = [
            'January',
            'February',
            'March',
            'April',
            'May',
            'June',
            'July',
            'August',
            'September',
            'October',
            'November',
            'December',
        ];

        const data = {
            labels: labels,
            datasets: [{
                label: 'Bookings',
                backgroundColor: 'rgb(255, 99, 132)',
                borderColor: 'rgb(255, 99, 132)',
                data: [details.jan, details.feb, details.mar, details.apr, details.may, details.jun, details.jul, details.aug, details.sep, details.oct, details.nov, details.dec],
            }]
        };

        const config = {
            type: 'line',
            data: data,
            options: {}
        };
        const myChart = new Chart(
            document.getElementById('myChart'),
            config
        );

    }
    function pieChart(resp) {
        const data = {
            labels: [
                'Suite Room',
                'Super Delux',
                'Delux',
                'Standard'
            ],
            datasets: [{
                label: 'My First Dataset',
                data: [resp.suite, resp.superD, resp.delux, resp.standard],
                backgroundColor: [
                    'rgb(255, 99, 132)',
                    'rgb(54, 162, 235)',
                    'rgb(255, 205, 86)',
                    'rgb(102, 0, 204)'

                ],
                hoverOffset: 4
            }]
        };
        const config = {
            type: 'doughnut',
            data: data,
        };
        const myChart = new Chart(
            document.getElementById('pieChart'),
            config
        );
    }
    function revenueChart(details) {
        const labels =[
            'January',
            'February',
            'March',
            'April',
            'May',
            'June',
            'July',
            'August',
            'September',
            'October',
            'November',
            'December',
        ];
        const data = {
            labels: labels,
            datasets: [{
                label: 'Revenue',
                data: [details.jan, details.feb, details.mar, details.apr, details.may, details.jun, details.jul, details.aug, details.sep, details.oct, details.nov, details.dec],
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                ],
                borderColor: [
                   'rgb(75, 192, 192)',
                   'rgb(75, 192, 192)',
                   'rgb(75, 192, 192)',
                   'rgb(75, 192, 192)',
                   'rgb(75, 192, 192)',
                   'rgb(75, 192, 192)',
                   'rgb(75, 192, 192)',
                   'rgb(75, 192, 192)',
                   'rgb(75, 192, 192)',
                   'rgb(75, 192, 192)',
                   'rgb(75, 192, 192)',
                   'rgb(75, 192, 192)',
                ],
                borderWidth: 1
            }]
        };
        const config = {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            },
        };
        const myChart = new Chart(
            document.getElementById('revenueChart'),
            config
        );
    }

</script>
