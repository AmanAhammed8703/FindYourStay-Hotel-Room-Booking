<script>
  $(document).on("click", ".delete", function (e) {

    var varid = $(e.target).data('id');
    $('.modal-body #inp').attr('value',varid)
    $('.modal-footer #delete').attr('href', "/admin/deleteHotel?id="+varid)
  })
</script>

