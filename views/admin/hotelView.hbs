<div class="content-body">
  <div class="container-fluid">
    <div class="row page-titles mx-0">
      <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
          
          <h1 style="font-weight: 700;">Hotels <i class="fas fa-chevron-right"></i> {{hotel.propertyName}}</h1><br><br>
    <p style="color: black;">Address: {{hotel.Address}}</p>
    <p style="color: black;">Hotel ID:{{hotel._id}}</p>
          
        </div>
      </div>
      <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="javascript:void(0)">Table</a></li>
          <li class="breadcrumb-item active"><a href="javascript:void(0)">Datatable</a></li>
        </ol>
      </div>
    </div>
    <!-- row -->


    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table id="example" class="display" style="min-width: 845px;color: black;">
                <thead>
      <tr>
        
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th scope="col">No. of rooms</th>
        
        
        <th scope="col">Controlls</th>
      </tr>
    </thead>
    <tbody>
      {{#each rooms}}
      <tr>
        
        <td>{{this.category}}</td>
        <td>{{this.price}}</td>
        <td>{{this.quantity}}</td>
       
        
        <td><a href="/admin/roomView?id={{{this._id}}}" class="btn" style="width: 70px; text-decoration: underline;color: black;" >View <br>Details</a>
          {{!-- <a href="/admin/BlockHotel?id={{{this._id}}}" class="btn"><i class="fas fa-ban"></i></a> --}}
          
        </td>
      </tr>
      {{/each}}
    </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
