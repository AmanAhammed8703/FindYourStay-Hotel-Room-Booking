<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">
  <div class="container-fluid">
    <div class="row page-titles mx-0">
      <div class="col-sm-6 p-md-0">
        <div class="welcome-text">

          <h1 style="font-weight: 700;">Hotels Requests<i class="fas fa-chevron-right"></i> {{hotel.propertyName}}</h1><br><br>
         
        </div>
      </div>
      <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="javascript:void(0)">Table</a></li>
          <li class="breadcrumb-item active"><a href="javascript:void(0)">Datatable</a></li>
        </ol>
      </div>
    </div>
    <!-- row -->


    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">

          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table id="example" class="display" style="min-width: 845px;color: black;">
                <thead>
                  <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Property</th>
                    <th scope="col">Email</th>
                    <th scope="col">Location</th>
                    <th scope="col">Mobile No.</th>
                    <th scope="col">License</th>



                    <th scope="col">Controlls</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each hotel}}
                  <tr>
                    <th scope="row">1</th>
                    <td>{{this.propertyName}}</td>
                    <td>{{this.Email}}</td>
                    <td>{{this.Location}}</td>
                    <td>{{this.mobileNumber}}</td>
                    <td><button type="button" data-id="{{{this._id}}}" id="show" class="show btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#exampleModal2">
                        Show
                      </button></td>


                    <td>

                      <a href="/admin/requestAccept?id={{{this._id}}}" class="btn btn-success"
                        style="width: 80px;">Accept</a>
                      <!-- Button trigger modal -->
                      <!-- Button trigger modal -->
                      <button type="button" data-id="{{this._id}}"  id="reject"class="reject btn btn-danger" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        reject
                      </button>

                      <!-- Modal -->
                      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              
                              Are you sure?Do you want to reject this hotel?
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <a href="" id="delete" type="button" class="btn btn-danger">Delete</a>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- Modal -->
                      <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              
                              <img src="" id="image" alt="image"  style="width: 500px;">
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        
                            </div>
                          </div>
                        </div>
                      </div>



                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
<!--**********************************
            Content body end
        ***********************************-->

