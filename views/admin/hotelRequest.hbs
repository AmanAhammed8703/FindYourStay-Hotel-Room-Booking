<script>
  $(document).on("click", ".reject", function (e) {

    var varid = $(e.target).data('id');


    $('.modal-body #inp').val("res" + varid)
    $('.modal-footer #delete').attr('href', "/admin/rejectHotel?id=" + varid)
  })
</script>
<script>
  $(document).on("click", ".show", function (e) {

    var varid = $(e.target).data('id');

  
    $('.modal-body #image').attr('src', "/vendor-license/" + varid + ".jpeg")

  })
</script>


