 <table class="table table-responsive"  id="adminHotel">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Property</th>
        <th scope="col">Email</th>
        <th scope="col">Owner</th>
        <th scope="col">Mobile No.</th>
        <th scope="col">Block</th>
        
        
        <th scope="col">Controlls</th>
      </tr>
    </thead>
    <tbody>
      {{#each hotel}}
      <tr>
        <th scope="row">1</th>
        <td>{{this.propertyName}}</td>
        <td>{{this.Email}}</td>
        <td>{{this.userName}}</td>
        <td>{{this.mobileNumber}}</td>
        <td>{{this.Block}}</td>
        
        <td><a href="/admin/hotelView?id={{{this._id}}}" class="btn" style="width: 70px; text-decoration: underline;">View Details</a>
        {{#if Block}}
        <a href="/admin/unblockHotel?id={{{this._id}}}" class="btn" style="width: 80px;">Unblock</a>
        {{else}}
          <a href="/admin/BlockHotel?id={{{this._id}}}" class="btn" style="width: 80px;">Block</a>
        {{/if}}
          
          
        
<!-- Button trigger modal -->
<!-- Button trigger modal -->
<button type="button" class="delete btn btn-danger" data-bs-toggle="modal"  data-id="{{this._id}}"data-bs-target="#exampleModal">
  <i class="fas fa-trash"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure?Do you want to delete this hotel?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <a href="" type="button" id="delete"class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>


      
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<script>
 $(function () {
    $('#adminHotel').DataTable();
    
} );
</script>
<script>
  $(document).on("click",".delete",function(){
    
    var varid=$(this).data('id');
    
    $('.modal-footer #delete').attr('href',"/admin/deleteHotel?id="+varid)
  })
</script>
